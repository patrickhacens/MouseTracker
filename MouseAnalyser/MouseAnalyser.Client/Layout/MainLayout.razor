@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu"
					   Color="Color.Inherit"
					   Edge="Edge.Start"
					   OnClick="@((e) => DrawerToggle())" />
		Mouse Profile Analyser
	</MudAppBar>
	<MudDrawer @bind-Open="@_drawerOpen" Elevation="2" ClipMode="DrawerClipMode.Always">
		<MudNavMenu>
			<MudNavLink Href="/players" Match="NavLinkMatch.All">Players</MudNavLink>
			<MudDivider />
			<AnalysesNavMenu />
			<MudDivider />
			<MouseAnalyser.Client.Pages.UploadAnalysisComponent />
		</MudNavMenu>
	</MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-8">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}
}